  <div id="final-message" style="display:none;">
    <p>ðŸŽ‰ Â¡Felicitaciones, has recorrido la Ruta del Tundunchil y has recibido el bastÃ³n sagrado, sÃ­mbolo de sabidurÃ­a ancestral!</p>
    <div id="baston">ðŸª“âœ¨</div>
  </div>

  <script>
    const stops = [
      {
        name: "Toctepamba",
        question: "Â¿CuÃ¡l es la funciÃ³n principal del Tundunchil en la comunidad?",
        options: [
          { text: "Cantar y bailar solo por diversiÃ³n", correct: false },
          { text: "Representar y preservar las tradiciones ancestrales", correct: true },
          { text: "Ser un lÃ­der polÃ­tico", correct: false },
          { text: "Organizar eventos deportivos", correct: false }
        ],
        feedback: "El Tundunchil es importante porque representa y preserva las tradiciones ancestrales."
      },
      {
        name: "Socartes",
        question: "Â¿QuÃ© elemento del vestuario del Wawa Danza simboliza la conexiÃ³n con la tierra?",
        options: [
          { text: "La mÃ¡scara", correct: false },
          { text: "Los cascabeles", correct: false },
          { text: "El atuendo tejido", correct: true },
          { text: "El bastÃ³n sagrado", correct: false }
        ],
        feedback: "El atuendo tejido representa la conexiÃ³n con la tierra en el vestuario del Wawa Danza."
      },
      {
        name: "Gun Grande",
        question: "Â¿QuÃ© festividad es la mÃ¡s importante para los Tundunchil?",
        options: [
          { text: "Carnaval", correct: false },
          { text: "Fiesta del Inti Raymi", correct: false },
          { text: "VÃ­speras del Tundunchil", correct: true },
          { text: "Fiesta de San Juan", correct: false }
        ],
        feedback: "La fiesta de VÃ­speras del Tundunchil es la festividad mÃ¡s importante para esta cultura."
      }
    ];

    let currentStop = 0;

    const stopsElements = document.querySelectorAll('.stop');
    const questionBox = document.getElementById('question-box');
    const questionText = document.getElementById('question-text');
    const optionsList = document.getElementById('options-list');
    const feedbackDiv = document.getElementById('feedback');
    const finalMessage = document.getElementById('final-message');

    function enableStop(index) {
      stopsElements.forEach((el, i) => {
        if(i === index) {
          el.classList.remove('disabled');
        } else if(i > index) {
          el.classList.add('disabled');
        }
      });
    }

    function showQuestion(index) {
      questionBox.style.display = 'block';
      finalMessage.style.display = 'none';
      feedbackDiv.textContent = '';
      questionText.textContent = stops[index].question;

      // Limpiar opciones previas
      optionsList.innerHTML = '';

      stops[index].options.forEach((opt, i) => {
        const li = document.createElement('li');
        const btn = document.createElement('button');
        btn.textContent = opt.text;
        btn.onclick = () => checkAnswer(i, index);
        li.appendChild(btn);
        optionsList.appendChild(li);
      });
    }

    function checkAnswer(selectedIndex, stopIndex) {
      const isCorrect = stops[stopIndex].options[selectedIndex].correct;
      if(isCorrect) {
        feedbackDiv.style.color = '#2e7d32'; // verde
        feedbackDiv.textContent = "Â¡Correcto! Avanza a la siguiente parada.";
        disableOptions();
        // Avanzar despuÃ©s de 2 segundos
        setTimeout(() => {
          currentStop++;
          if(currentStop < stops.length) {
            enableStop(currentStop);
            showQuestion(currentStop);
            highlightCurrentStop(currentStop);
          } else {
            // Juego terminado
            questionBox.style.display = 'none';
            finalMessage.style.display = 'block';
            clearHighlights();
          }
        }, 2000);
      } else {
        feedbackDiv.style.color = '#c62828'; // rojo
        feedbackDiv.textContent = stops[stopIndex].feedback + " Intenta de nuevo.";
      }
    }

    function disableOptions() {
      const buttons = optionsList.querySelectorAll('button');
      buttons.forEach(btn => btn.disabled = true);
    }

    function highlightCurrentStop(index) {
      stopsElements.forEach((el, i) => {
        if(i === index) {
          el.style.boxShadow = "0 0 15px 5px #cda15f";
          el.style.transform = "scale(1.3)";
          el.style.zIndex = 10;
        } else {
          el.style.boxShadow = "";
          el.style.transform = "scale(1)";
          el.style.zIndex = 1;
        }
      });
    }

    function clearHighlights() {
      stopsElements.forEach(el => {
        el.style.boxShadow = "";
        el.style.transform = "scale(1)";
        el.style.zIndex = 1;
      });
    }

    // Eventos click en paradas
    stopsElements.forEach((el, i) => {
      el.addEventListener('click', () => {
        if(!el.classList.contains('disabled')) {
          currentStop = i;
          showQuestion(i);
          highlightCurrentStop(i);
        }
      });
    });

    // Inicializar juego
    enableStop(0);
    highlightCurrentStop(0);
    showQuestion(0);
  </script>
</body>
